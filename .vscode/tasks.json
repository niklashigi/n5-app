{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint code",
      "command": "pnpm",
      "args": ["lint"],
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "color": "terminal.ansiYellow",
        "id": "search"
      }
    },
    {
      "label": "Format code",
      "command": "pnpm",
      "args": ["format"],
      "problemMatcher": [],
      "icon": {
        "color": "terminal.ansiYellow",
        "id": "wand"
      }
    },
    {
      "label": "Build server",
      "command": "pnpm",
      "args": ["dev:build"],
      "options": {
        "cwd": "${workspaceFolder}/packages/server"
      },
      "problemMatcher": [],
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never"
      },
      "icon": {
        "id": "wrench",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "Run server",
      "command": "pnpm",
      "args": ["dev:start"],
      "options": {
        "cwd": "${workspaceFolder}/packages/server"
      },
      "problemMatcher": [],
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never"
      },
      "icon": {
        "id": "server",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "Run client",
      "group": "build",
      "command": "pnpm",
      "args": ["dev"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/packages/client"
      },
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never"
      },
      "icon": {
        "id": "device-desktop",
        "color": "terminal.ansiCyan"
      }
    }
  ]
}
